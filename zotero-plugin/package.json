{
  "name": "researchopia",
  "type": "module",
  "version": "0.5.0",
  "description": "An open academic community. Academic annotation sharing and collaboration for Zotero",
  "config": {
    "addonName": "研学港 Researchopia",
    "addonID": "researchopia@zotero.plugin",
    "addonRef": "researchopia",
    "addonInstance": "Researchopia",
    "prefsPrefix": "extensions.zotero.researchopia"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/occasional16/researchopia.git"
  },
  "author": "Researchopia",
  "bugs": {
    "url": "https://github.com/occasional16/researchopia/issues"
  },
  "homepage": "https://github.com/occasional16/researchopia#readme",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "start": "zotero-plugin serve",
    "build": "cross-env NODE_ENV=production zotero-plugin build && tsc --noEmit",
    "build:dev": "zotero-plugin build && tsc --noEmit",
    "lint:check": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint . --fix",
    "release": "cross-env NODE_ENV=production zotero-plugin release",
    "test": "zotero-plugin test",
    "update-deps": "npm update --save"
  },
  "dependencies": {
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.58.0",
    "zod": "^4.1.12",
    "zotero-plugin-toolkit": "^5.1.0-beta.9"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.5.2",
    "@zotero-plugin/eslint-config": "^0.6.7",
    "chai": "^5.3.3",
    "cross-env": "^10.1.0",
    "eslint": "^9.36.0",
    "mocha": "^11.7.2",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "zotero-plugin-scaffold": "^0.8.0",
    "zotero-types": "^4.1.0-beta.3"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "endOfLine": "lf",
    "overrides": [
      {
        "files": [
          "*.xhtml"
        ],
        "options": {
          "htmlWhitespaceSensitivity": "css"
        }
      }
    ]
  }
}
