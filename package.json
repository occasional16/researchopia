{
    "name": "researchopia",
    "version": "0.4.0",
    "description": "研学港 | Researchopia - 开放的学术交流和共享平台。研学并进，智慧共享 | Where Research Meets Community",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "components": {
        "website": "0.4.0",
        "zotero-plugin": "0.8.1",
        "browser-extension": "0.1.1",
        "docs": "0.1"
    },
    "scripts": {
        "version:sync": "node scripts/sync-versions.js",
        "version:check": "node scripts/check-versions.js",
        "version:bump": "npm version patch && npm run version:sync",
        "dev": "next dev -H 0.0.0.0",
        "build": "next build",
        "preview": "npx opennextjs-cloudflare build && npx opennextjs-cloudflare preview",
        "deploy": "npx opennextjs-cloudflare build && npx opennextjs-cloudflare deploy",
        "start": "next start",
        "lint": "eslint",
        "setup-supabase": "node setup-supabase.js",
        "websocket": "node websocket-server.js",
        "websocket:enhanced": "node websocket-server-enhanced.js",
        "dev:full": "concurrently \"npm run websocket:enhanced\" \"npm run dev\"",
        "db:migrate": "psql -f database/annotation-sharing-schema.sql",
        "db:security-fix": "psql -f database/security-fixes-simple.sql",
        "db:setup": "npm run db:migrate && npm run db:security-fix",
        "zotero:build": "cd zotero-plugin && bash build-enhanced.sh",
        "zotero:build:win": "cd zotero-plugin && build-enhanced.bat",
        "zotero:fix": "cd zotero-plugin && bash quick-fix.sh",
        "zotero:fix:win": "cd zotero-plugin && quick-fix.bat",
        "zotero:test": "cd zotero-plugin && bash test-simple.sh",
        "zotero:package": "cd zotero-plugin && zip -r researchopia-enhanced.xpi .",
        "check-email": "node scripts/check-email-config.js",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "test:ci": "vitest run --coverage --reporter=verbose"
    },
    "dependencies": {
        "@mdx-js/loader": "^3.1.1",
        "@mdx-js/react": "^3.1.1",
        "@next/mdx": "^16.0.1",
        "@supabase/auth-ui-react": "^0.4.7",
        "@supabase/auth-ui-shared": "^0.1.8",
        "@supabase/ssr": "^0.7.0",
        "@supabase/supabase-js": "^2.57.2",
        "@tanstack/react-query": "^5.90.5",
        "@types/nodemailer": "^7.0.1",
        "@types/ws": "^8.18.1",
        "@vercel/analytics": "^1.5.0",
        "@vercel/speed-insights": "^1.2.0",
        "axios": "^1.12.2",
        "date-fns": "^4.1.0",
        "dotenv": "^17.2.2",
        "easymde": "^2.20.0",
        "fuse.js": "^7.1.0",
        "gray-matter": "^4.0.3",
        "lucide-react": "^0.543.0",
        "next": "^15.5.2",
        "nodemailer": "^7.0.6",
        "pdfjs-dist": "^5.4.149",
        "react": "19.1.0",
        "react-dom": "19.1.0",
        "react-google-recaptcha-v3": "^1.11.0",
        "react-markdown": "^10.1.0",
        "react-simplemde-editor": "^5.2.0",
        "rehype-autolink-headings": "^7.1.0",
        "rehype-highlight": "^7.0.2",
        "rehype-raw": "^7.0.0",
        "rehype-slug": "^6.0.0",
        "remark-gfm": "^4.0.1",
        "resend": "^6.5.2",
        "ws": "^8.18.3",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3",
        "@opennextjs/cloudflare": "^1.14.7",
        "@tailwindcss/postcss": "^4",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^20",
        "@types/pdfjs-dist": "^2.10.377",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "@vitejs/plugin-react": "^5.1.1",
        "@vitest/coverage-v8": "^4.0.10",
        "@vitest/ui": "^4.0.10",
        "concurrently": "^9.2.1",
        "eslint": "^9",
        "eslint-config-next": "15.5.2",
        "jsdom": "^27.2.0",
        "tailwindcss": "^4",
        "typescript": "^5",
        "vitest": "^4.0.10",
        "wrangler": "^4.56.0"
    }
}
